{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "feature": {
            "type": "object",
            "properties": {
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "description": { "type": "string" }
                  },
                  "required": ["description"]
                }
              }
            },
            "required": ["steps"]
          },
          "action": { "type": "string" },
          "url": { "type": "string" },
          "by": { "type": "string" },
          "value": { "type": "string" },
          "text": { "type": "string" }
        },
        "required": ["feature"]
      }
    }
  },
  "required": ["features"]
}