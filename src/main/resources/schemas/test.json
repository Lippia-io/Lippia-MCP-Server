{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "feature": {
            "type": "object",
            "properties": {
              "scenarios": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "description": {
                      "type": "string"
                    },
                    "steps": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "description": {
                            "type": "string"
                          },
                          "actions": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "action": {
                                  "type": "string",
                                  "enum": [
                                    "open_browser",
                                    "navigate_to",
                                    "close_browser",
                                    "click",
                                    "type",
                                    "get_text",
                                    "get_page_title",
                                    "get_page_source",
                                    "get_current_url",
                                    "screenshot",
                                    "wait_clickable",
                                    "wait_visibility",
                                    "wait_visibilities",
                                    "wait_invisibility",
                                    "wait_invisibilities",
                                    "wait_presence",
                                    "wait_presences",
                                    "is_enabled",
                                    "is_selected",
                                    "is_present",
                                    "is_visible"
                                  ]
                                },
                                "parameters": {
                                  "type": "object",
                                  "properties": {
                                    "url": {
                                      "type": "string",
                                      "description": "The URL to navigate to (required for navigate_to action)"
                                    },
                                    "by": {
                                      "type": "string",
                                      "enum": ["css", "xpath", "id", "name", "class", "tag", "accessibility_id", "android_ui_automator", "ios_ns_predicate", "custom", "image"],
                                      "description": "The type of selector to use (required for element interactions)"
                                    },
                                    "selector": {
                                      "type": "string",
                                      "description": "The CSS selector, XPath, or other selector string (required for element interactions)"
                                    },
                                    "text": {
                                      "type": "string",
                                      "description": "Text to type into an input field (required for type action)"
                                    },
                                    "filename": {
                                      "type": "string",
                                      "description": "Filename for screenshot (optional for screenshot action)"
                                    },
                                    "random_string": {
                                      "type": "string",
                                      "description": "Dummy parameter for actions that don't require parameters"
                                    }
                                  }
                                }
                              },
                              "required": ["action"]
                            }
                          }
                        },
                        "required": ["description"]
                      }
                    }
                  },
                  "required": ["description", "steps"]
                }
              }
            },
            "required": ["scenarios"]
          }
        },
        "required": ["feature"]
      }
    }
  },
  "required": ["features"]
}